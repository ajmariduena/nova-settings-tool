{
    "name": "ajmariduena/nova-settings-tool",
    "description": "A Laravel Nova tool to manage app settings.",
    "keywords": [
        "laravel",
        "nova",
        "settings",
        "tool"
    ],
    "homepage": "https://github.com/ajmariduena/nova-settings-tool.git",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "laravel/nova": "*",
        "spatie/valuestore": "^1.2"
    },
    "require-dev": {
        "orchestra/testbench": "^3.7",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Ajmariduena\\SettingsTool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ajmariduena\\SettingsTool\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ajmariduena\\SettingsTool\\SettingsToolServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
